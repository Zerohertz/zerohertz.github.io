.posts-expand .post-title-link {
  color: #000 !important;
  &::before {
    background: #800a0a !important;
  }
  &:hover {
    color: #800a0a !important;
  }
}

// - source/css/_common/components/post/post-body.styl - //
.post-body {
  h1, h2, h3, h4, h5, h6 {
    .header-anchor,
    .headerlink {
      color: #800a0a !important;
    }
  }
}

// - source/css/_common/components/post/post-collapse.styl - //
.posts-collapse .post-content {
  .collection-year {
    .collection-year-count {
      color: #800a0a !important;
    }
  }
  .post-header {
    &:hover {
      border-bottom-color: #800a0a !important;
      color: #800a0a !important;
    }
  }
  .post-title {
    a {
      &:hover {
        border-bottom-color: #800a0a !important;
        color: #800a0a !important;
      }
    }
  }
}

// - source/css/_common/components/pages/categories.styl - //
.category-all-page {
  .category-list-count {
    color: #800a0a !important;
  }
}

// - source/css/_schemes/Pisces/_sidebar.styl - //
if (hexo-config("back2top.sidebar")) {
  .back-to-top {
    &:hover {
      color: #800a0a !important;
    }
  }
}

// - source/css/_common/components/third-party/search.styl - //
if (hexo-config("local_search.enable") or hexo-config("algolia_search.enable")) {
  .search-popup {
    input.search-input {
      height: 100%;
    }
  }
}
