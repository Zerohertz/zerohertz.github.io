// - source/css/_common/outline/header/site-meta.styl - //
.custom-logo-image {
  margin-top: -30px !important;
  + tablet-mobile() {
    display: block !important;
  }
}
.site-title {
  color: black;
}

// - source/css/_common/outline/sidebar/index.styl - //
.sidebar {
  background: #fff !important;
}

// - source/css/_common/outline/sidebar/site-state.styl - //
if (hexo-config("site_state")) {
  .site-state-item-count {
    color: #000;
  }
}

// - source/css/_common/scaffolding/highlight/index.styl - //
$code-inline {
  background: #f5f0f0 !important;
  color: #800a0a !important;
}
$code-block {
  background: var(--highlight-background) !important;
  color: var(--highlight-foreground) !important;
}
figure.highlight {
  .gutter {
    pre {
      background: var(--highlight-gutter-background) !important;
    }
  }
}

